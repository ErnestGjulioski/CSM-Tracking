{
  "info": {
    "name": "Fleet Vehicle API",
    "_postman_id": "csm-vehicle-collection",
    "description": "Postman Tests f√ºr Vehicle CRUD + Filter",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Vehicle",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"licensePlate\": \"M-AB123\",\n  \"manufacturer\": \"BMW\",\n  \"model\": \"X5\",\n  \"year\": 2020,\n  \"status\": \"ACTIVE\",\n  \"lastMaintenance\": \"2024-01-01T10:00:00\",\n  \"nextMaintenance\": \"2025-01-01T10:00:00\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/vehicles",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["vehicles"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status Code is 200\", function () { pm.response.to.have.status(200); });",
              "pm.test(\"Vehicle ID was created\", function () { var jsonData = pm.response.json(); pm.expect(jsonData).to.have.property(\"id\"); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Get All Vehicles",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8081/vehicles",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["vehicles"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status Code is 200\", function () { pm.response.to.have.status(200); });",
              "pm.test(\"Response is an array\", function () { pm.expect(pm.response.json()).to.be.an(\"array\"); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Vehicle by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8081/vehicles/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["vehicles", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Update Vehicle",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"licensePlate\": \"M-XY987\",\n  \"manufacturer\": \"Audi\",\n  \"model\": \"A6\",\n  \"year\": 2021,\n  \"status\": \"MAINTENANCE\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/vehicles/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["vehicles", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Vehicle",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:8081/vehicles/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["vehicles", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Filter Vehicles",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8081/vehicles/filter?status=ACTIVE&manufacturer=BMW",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["vehicles", "filter"],
          "query": [
            { "key": "status", "value": "ACTIVE" },
            { "key": "manufacturer", "value": "BMW" }
          ]
        }
      },
      "response": []
    }
  ]
}
